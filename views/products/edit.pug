extends ../layout

block content
  h2 Edit Product
  form(method='POST' enctype='multipart/form-data')
    .form-row
      input(type='hidden' name='txtId' value=product.id)
      .form-group.col-md-6
        label(for='txtName') Name
        input.form-control(name='txtName' type='text' value=product.name)
      .form-group.col-md-6
        label(for='txtCost') Cost
        .input-group
          .input-group-prepend
            .input-group-text đ
          input.form-control.text-right(name='txtCost' type='number' step=100 value=product.cost)
      .form-group.col-md-6
        label(for='txtQty') Quantity
        input.form-control.text-right(name='txtQty' type='number' value=product.quantity)
      .form-group.col-md-6
        label(for='txtPrice') Price
        .input-group
          .input-group-prepend
            .input-group-text đ
          input.form-control.text-right(name='txtPrice' type='number' step=1000 value=product.price)
    button.btn.btn-success(type='submit') Save
    span  
    a.btn.btn-secondary(href='/products') Back
  