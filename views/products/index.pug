extends ../layout

block content
  div(class='menu-bar')
    h3 Product Page
  br
  div
    table
      thead
        tr
          th(style='width: 10%') No.
          th(style='width: 20%') Name
          th(style='width: 10%') Price
          th(style='width: 50%') Description
          th(style='width: 10%')
            a(href='../products/add')
              button(class='btn btn-success') Add New
      tbody
      each row, index in result.rows
        tr
          td #{index + 1}
          td #{row.name}
          td #{row.price}
          td #{row.description}
          td
            a(href='/products/edit/' + row.id) Edit | 
            a(onclick='return confirm("Are you sure?")' href='/products/delete/' + row.id) Delete
    