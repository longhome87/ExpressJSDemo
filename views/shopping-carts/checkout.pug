extends ../layout

block content
  style.
    #messages { list-style-type: none; margin: 0; padding: 0; }
    #messages li { padding: 5px 10px; }
    #messages li:nth-child(odd) { background: #eee; }
  .alert.alert-success Ordered successful.
  ul#messages
  form.form-inline
    input#m(autocomplete='off').form-control.ml-2
    button.btn.btn-success.ml-2 Send
  script(src='https://code.jquery.com/jquery-3.3.1.min.js')
  script.
    $(function () {
      var socket = io();

      var userManagement = document.getElementById('userManagement');
      var username = userManagement.innerHTML;
      socket.emit(SOCKET.CREATE, username);

      $('form').submit(function() {
        var data = { 
          username: username,
          message: $('#m').val()
        }

        socket.emit(SOCKET.CHAT, data);
        $('#m').val('');
        return false;
      });

      socket.on(SOCKET.CHAT, function(data) {
        var name = data.username == username ? 'Me' : data['display-name'];
        $('#messages').append($('<li>').text(name + ': ' + data.message));
        window.scrollTo(0, document.body.scrollHeight);
      });
    });
